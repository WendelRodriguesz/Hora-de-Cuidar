{
  "name": "projeto-hdc",
  "private": true,
  "packageManager": "npm@11.4.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "cross-env INFISICAL_DISABLE_UPDATE_CHECK=true infisical run -- turbo run dev --env-mode loose --no-daemon",
    "build": "turbo run build",
    "db:build": "cross-env INFISICAL_DISABLE_UPDATE_CHECK=true infisical run -- turbo run db:build --env-mode loose --no-daemon",
    "db:migrate:dev": "cross-env INFISICAL_DISABLE_UPDATE_CHECK=true infisical run -- turbo run db:migrate:dev --env-mode loose --no-daemon",
    "db:reset": "cross-env INFISICAL_DISABLE_UPDATE_CHECK=true infisical run -- prisma migrate reset --schema=./apps/api/prisma/schema.prisma",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker-compose": "infisical run -- docker compose"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/passport-local": "^1.0.38",
    "cross-env": "^7.0.3",
    "eslint-plugin-jest": "^29.0.1",
    "npm-force-resolutions": "^0.0.10",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "resolutions": {
    "express": "4.19.2",
    "body-parser": "1.20.3",
    "path-to-regexp": "0.1.12",
    "multer": "2.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/swagger": "^11.2.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cache-manager": "^6.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "date-fns": "^4.1.0",
    "ioredis": "^5.6.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  }
}
